@using PathDistribution.Helpers
@model List<PathDistribution.Models.ScheduleComments>

@{
    bool isAdmin = System.Web.HttpContext.Current.IsAdmin();
}

<table id="comments" style="width:100%" cellspacing="3" cellpadding="0">
    <thead class="text2" style="text-align:center;height:14px">
        <tr>
            <td class="text7">Comments</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var cmt in Model)
        {
            <tr data-id="@cmt.pkComment">
                @if (isAdmin)
                {
                    <td>@Html.TextBoxFor(ct => cmt.chrComment, new { @style = "width:100%", @maxlength = "100" })</td>
                }
                else
                {
                    <td>@Html.TextBoxFor(ct => cmt.chrComment, new { @style = "width:100%;pointer-events:none", @name = "cmt.chrCommentRO", @readonly = "readonly", @maxlength = "100" })</td>
                }
            </tr>
        }
        @if (isAdmin)
        {
            <tr class="new" data-id="">
                <td><input id="cmt_chrComment" name="cmt.chrComment" type="text" value="" style="width:100%" maxlength="100"></td>
            </tr>
        }
    </tbody>
</table>
