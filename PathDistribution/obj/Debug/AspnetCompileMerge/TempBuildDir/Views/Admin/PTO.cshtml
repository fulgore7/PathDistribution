@model List<Tuple<string, string>>

<div id="ptoModal" class="modal-dialog2" role="dialog" title="Enter PTO Request">
    <span class="ui-helper-hidden-accessible"><input type="text" /></span>
    <table style="width:100%;">
        <tr id="path">
            <td class="text7" style="text-align:right">Path:</td>
            <td style="text-align:left">
                <input id="chrPath" autocomplete="off" disabled style="color:fieldtext;" />
            </td>
        </tr>
        <tr>
            <td class="text7" style="text-align:right">Start Date:</td>
            <td style="text-align:left">
                <input id="StartDate" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td class="text7" style="text-align:right">End Date:</td>
            <td style="text-align:left">
                <input id="EndDate" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td class="text7" style="text-align: right;">Off Type:</td>
            <td style="text-align:left">
                <select id="offType" name="offType" class="form-control">
                    @foreach (var offtype in Model.Where(x => !x.Item1.Equals("PEND")))
                    {
                        <option value="@offtype.Item1" data-color-class="@offtype.Item2">@offtype.Item1</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td class="text7" style="text-align:right;">Reason:</td>
            <td style="text-align:left">
                <input id="ptoReason" maxlength="255" class="ui-autocomplete-input" />
            </td>
            <td><input id="pkPTO" hidden value="-1" /><input id="intStatus" hidden value="0" /></td>
        </tr>
    </table>
</div>
