@model List<PathDistribution.Models.PathScheduleDatesCal>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div id="calendar">
                <h1>Wow ! That calendar works !</h1>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
   const colorNamesToHex = {
    "black": "#000000",
    "white": "#FFFFFF",
    "red": "#FF0000",
    "green": "#008000",
    "blue": "#0000FF",
    "yellow": "#FFFF00",
    "purple": "#800080",
    "orange": "#FFA500",
    "pink": "#FFC1CC",
    "gray": "#808080",
    // Add more colors as needed
};

function nameToHex(colorName) {
    // Convert to lowercase for case-insensitive matching
    const hex = colorNamesToHex[colorName.toLowerCase()];
    return hex || null; // Return null if color not found
}
    var modelData = @Html.Raw(Json.Encode(Model));

    // Initialize the events array
    var events = [];

    // Loop through each item in the model data
    modelData.forEach(function (item) {
        events.push({
            start: moment(item.dte).format('X'), // Adjust the property names as needed
            end: moment(item.dte).format('X'),     // Adjust the property names as needed
            title: 'request',                        // Adjust the property names as needed
            color: nameToHex(item.chrColor),                    // Adjust the property names as needed
            category: item.chrPath                  // Adjust the property names as needed
        });
    });
    };

</script>