@model PathDistribution.Models.PathAssignments

<table id="pathschedule" style="width:100%">
    <tr class="text2">
        <th>Assignment</th>
        <th>Pathologist</th>
    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr class="text5" style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => Model[i].chrAssignment)
                @Html.HiddenFor(modelItem => Model[i].chrAssignment, new { Name = "pathAssign[" + i.ToString() + "].chrAssignment" })
                @Html.HiddenFor(modelItem => Model[i].dteAssigned, new { Name = "pathAssign[" + i.ToString() + "].dteAssigned"})
            </td>
            <td>
                @if (string.IsNullOrEmpty(Model[i].chrName))
                {
                    <div class="changePath">@Html.DisplayFor(modelItem => Model[i].chrName)</div>
                    @Html.DropDownList("pathAssign[" + i.ToString() + "].chrNameselect", new SelectList(Model.Paths, Model[i].chrName))
                }
                else
                {
                    <div class="changePath">@Html.DisplayFor(modelItem => Model[i].chrName)</div>
                    @Html.DropDownList("pathAssign[" + i.ToString() + "].chrNameselect", new SelectList(Model.Paths, Model[i].chrName), new { style = "display:none" })
                }
                @Html.HiddenFor(modelItem => Model[i].chrName, new { Name = "pathAssign[" + i.ToString() + "].chrName" })
                @Html.HiddenFor(modelItem => Model[i].chrOverName, new { Name = "pathAssign[" + i.ToString() + "].chrOverName" })
                @Html.HiddenFor(modelItem => Model[i].bitOverride, new { Name = "pathAssign[" + i.ToString() + "].bitOverride" })
                @Html.HiddenFor(modelItem => Model[i].chrOverComment, new { Name = "pathAssign[" + i.ToString() + "].chrOverComment" })
            </td>
        </tr>
    }
</table>

<div id="myModal4" class="modal-dialog" role="dialog">
    <span class="text7" style="font-size: 14px;font-weight:bold;">Please enter the reason?</span>
    <textarea rows="4" cols="25" id="pathComment" maxlength="255"></textarea>
    <div style="float:right;margin-right:10px;margin-bottom:5px;margin-top:5px">
        <button id="closepathmodal" type="button" class="cartbutton">Close</button>
        <button id="applypathmodal" type="button" class="cartbutton">Apply</button>
    </div>
</div> 